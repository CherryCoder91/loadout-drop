<Application x:Class="LoadoutDrop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LoadoutDrop"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LoadoutDrop.CustomControls;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="QuickSandLight">pack://application:,,,/Resources/Fonts/#Quicksand Light</FontFamily>
            <FontFamily x:Key="QuickSandRegular">pack://application:,,,/Resources/Fonts/#Quicksand Regular</FontFamily>
            <FontFamily x:Key="QuickSandBold">pack://application:,,,/Resources/Fonts/#Quicksand Bold</FontFamily>

        </ResourceDictionary>
    </Application.Resources>
</Application>
