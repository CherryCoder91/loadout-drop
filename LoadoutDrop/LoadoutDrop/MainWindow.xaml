<Window x:Class="LoadoutDrop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoadoutDrop"
        xmlns:widgetControls="clr-namespace:LoadoutDrop.View.UserControls.Widget"
        xmlns:domainControls="clr-namespace:LoadoutDrop.View.UserControls.Domain"
        mc:Ignorable="d"
        Title="Loadout Drop"
        Height="720"
        Width="1280"
        Icon="Resources/Icons/loadoutdrop.png"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

        <widgetControls:WindowContentContainer Type="Primary">
            <widgetControls:WindowContentContainer.MyContent>
                <domainControls:AppMenuBar>
                </domainControls:AppMenuBar>
            </widgetControls:WindowContentContainer.MyContent>
        </widgetControls:WindowContentContainer>

</Window>
