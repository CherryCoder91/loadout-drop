<Window x:Class="LoadoutDrop.View.UserControls.Page.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoadoutDrop.View.UserControls.Page"
        xmlns:fa="http://schemas.fontawesome.com/icons/svg"
        xmlns:widgetControls="clr-namespace:LoadoutDrop.View.UserControls.Widget"
        mc:Ignorable="d"
                Title="About" Height="550" Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="../../../Resources/Icons/loadoutdrop.png">


    <widgetControls:WindowContentContainer Type="Secondary">
        <widgetControls:WindowContentContainer.MyContent>
            <StackPanel Orientation="Vertical">
                <Image Source="../../../Resources/Icons/loadoutdrop.png" Width="64" Height="64" Margin="0 , 20 , 0, 0"></Image>
                <TextBlock Text="Loadout Drop" TextAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0 , 10 , 0, 0" Foreground="white"></TextBlock>

                <TextBlock Text="Loadout Drop is a project that contains useful development utils." TextAlignment="Left" FontSize="12" Margin="10 , 30 , 10, 0" TextWrapping="Wrap" Foreground="white"></TextBlock>

                <TextBlock Margin="10 , 10 , 10, 0"  Foreground="white">
            
            <TextBlock FontWeight="Bold" Foreground="white">Repository:</TextBlock>
            
            <Hyperlink
                NavigateUri="https://github.com/CherryCoder91/loadout-drop"
                RequestNavigate="Hyperlink_RequestNavigateRepository"
                Foreground="orange">
                https://github.com/CherryCoder91/loadout-drop
            </Hyperlink>
        </TextBlock>

                <Button Click="CloseButton_Click" Margin="0,280,0,0">Close</Button>

            </StackPanel>
        </widgetControls:WindowContentContainer.MyContent>
    </widgetControls:WindowContentContainer>

</Window>
