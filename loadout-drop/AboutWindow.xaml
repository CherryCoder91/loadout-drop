<Window x:Class="loadout_drop.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loadout_drop"
        xmlns:fa="http://schemas.fontawesome.com/icons/svg"
        mc:Ignorable="d"
        Title="About" Height="550" Width="450"
        WindowStartupLocation="CenterOwner"
        Icon="Resources/Icons/Loadout Drop/loadoutdrop.png"
        >
    <StackPanel Orientation="Vertical">
        <Image Source="Resources/Icons/Loadout Drop/loadoutdrop.png" Width="64" Height="64" Margin="0 , 20 , 0, 0"></Image>
        <TextBlock Text="Loadout Drop" TextAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0 , 10 , 0, 0"></TextBlock>

        <TextBlock Text="Loadout Drop is a project that contains useful development utils." TextAlignment="Left" FontSize="12" Margin="10 , 30 , 10, 0" TextWrapping="Wrap"></TextBlock>

        <TextBlock Margin="10 , 10 , 10, 0">
            
            <TextBlock FontWeight="Bold">Repository:</TextBlock>
            
            <Hyperlink
                NavigateUri="https://github.com/CherryCoder91/loadout-drop"
                RequestNavigate="Hyperlink_RequestNavigateRepository">
                https://github.com/CherryCoder91/loadout-drop
            </Hyperlink>
        </TextBlock>

    </StackPanel>
</Window>
