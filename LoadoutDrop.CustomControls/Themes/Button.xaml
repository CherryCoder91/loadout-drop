<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LoadoutDrop.CustomControls">


    <!-- USEAGE: -->
    <!--xmlns:CustomControls="clr-namespace:LoadoutDrop.CustomControls;assembly=LoadoutDrop.CustomControls"-->
    <!--<CustomControls:WindowPanel Style="{StaticResource SecondaryWindowPanel}">-->
    
    
    <!--Primary-->
    <Style x:Key="PrimaryButton" TargetType="{x:Type ButtonBase}">
        <Setter Property="Background" Value="blue" />
    </Style>

    
    <!--Secondary-->
    <Style x:Key="SecondaryButton" TargetType="{x:Type ButtonBase}">
        <Setter Property="Background" Value="red" />
    </Style>

    
    <!--Default-->
    <Style TargetType="{x:Type ButtonBase}" BasedOn="{StaticResource PrimaryButton}"/>


</ResourceDictionary>